{{#if editUser}}
<ul class="nav nav-tabs">
    <li role="presentation"><a href="/users/{{id}}/profile">My Profile</a></li>
    <li role="presentation"><a href="/users/{{id}}/questions">View Questions</a></li>
    <li role="presentation" class="active"><a href="/users/{{id}}/matches">Browse Matches</a></li>
    <p class="loginName">Logged in as: {{editUser.name}}</p>
