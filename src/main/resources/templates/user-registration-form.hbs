{{#partial "content"}}

   {{#if editUser}}

       <h1>Edit this user:</h1>

       <form action="/users/{{id}}/update" method="post">
           <div class ="row">
               <div class = "col-md-6">
                   <div class = "form-group">
                       <label for="newName">What is your Name?</label>
                       <input id="newName" name="newName" class = "form-control" type="text" value ="{{editUser.name}}">
                   </div>
               </div>
           </div>

           <div class ="row">
               <div class = "col-md-6">
                   <label for="newAge">Age</label>
                   <input id="newAge" name="newAge" class = "form-control" type="text" value ="{{editUser.age}}">
               </div>
           </div><br>

           <div class="row">
               <div class="col-md-3">
                   <p>I'm a
                       <label><input type="radio" name="newGender" value="male" >Male</label>
                       <label><input type="radio" name="newGender" value="female" >Female</label>
                   </p>
               </div>
               <div class="col-md-3">
                   <p>Interested in
                       <label><input type="radio" name="newGenderPreference" value="male">Male</label>
                       <label><input type="radio" name="newGenderPreference" value="female">Female</label>
                   </p>
               </div>
           </div>

           <div class="row">
               <div class="col-md-6">
                   <label for="newMinimumAge">Minimum Age Preference</label>
                   <input id="newMinimumAge" name="newMinimumAge" type="text" class = "form-control" value ="{{editUser.matchMinAge}}">
               </div>
           </div>

           <div class="row">
               <div class="col-md-6">
                   <label for="newMaximumAge">Maximum Age Preference</label>
                   <input id="newMaximumAge" name="newMaximumAge" type="text" class = "form-control" value ="{{editUser.matchMaxAge}}">
               </div>
           </div>

           <div class="row">
               <div class="col-md-6">
                   <label for="newZip">Zip Code</label>
                   <input id="newZip" name="newZip" type="text" class = "form-control" value ="{{editUser.zip}}">
               </div>
           </div>

           <div class="row">
               <div class="col-md-6">
                   <label for="newEmailAddress">Your Email Address</label>
                   <input id="newEmailAddress" name="newEmailAddress" type="text" class = "form-control" value ="{{editUser.email}}">
               </div>
           </div>

           <div class="row">
               <div class="col-md-6">
                   <label for="newPassword">Password</label>
                   <input id="newPassword" name="newPassword" type="text" class = "form-control" value ="{{editUser.password}}">
               </div>
           </div><br>

           <div class="row">
               <div class="col-md-6">
                   <p>
                       <label>Select city</label>
                       <select id="city" name="city">
                           <option value="">-- Choose City --</option>
                           <option value="1">Portland</option>
                           <option value="2">Salem</option>
                           <option value="3">Gresham</option>
                           <option value="4">Aloha</option>
                       </select>
                   </p>
               </div>
           </div>
           <button type="submit" class="btn btn-primary">Update</button>
       </form>

   {{else}}

<h2>Add a User</h2>

<div class="container">
<form action="/users/new" method="post">

    <div class ="row">
        <div class = "col-md-6">
            <div class = "form-group">
            <label for="inputName">Name</label>
            <input id="inputName" name="inputName" class = "form-control" type="text">
            </div>
        </div>
    </div>

    <div class ="row">
        <div class = "col-md-6">
            <label for="inputAge">Age</label>
            <input id="inputAge" name="inputAge" class = "form-control" type="text">
        </div>
    </div><br>

    <div class="row">
        <div class="col-md-3">
            <p>I'm a
                <label><input type="radio" name="gender" value="male" >Male</label>
                <label><input type="radio" name="gender" value="female" >Female</label>
            </p>
        </div>
        <div class="col-md-3">
            <p>Interested in
                <label><input type="radio" name="genderPreference" value="male">Male</label>
                <label><input type="radio" name="genderPreference" value="female">Female</label>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputMinimumAge">Minimum Age Preference</label>
            <input id="inputMinimumAge" name="inputMinimumAge" type="text" class = "form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputMaximumAge">Maximum Age Preference</label>
            <input id="inputMaximumAge" name="inputMaximumAge" type="text" class = "form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputZip">Zip Code</label>
            <input id="inputZip" name="inputZip" type="text" class = "form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="inputBio">Enter a Bio:</label>
            <textarea id="inputBio" name="inputBio" type="text" class ="form-control"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
        <label for="inputEmailAddress">Your Email Address</label>
        <input id="inputEmailAddress" name="inputEmailAddress" type="text" class = "form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="inputPassword">Password</label>
            <input id="inputPassword" name="inputPassword" type="password" class = "form-control">
        </div>
    </div><br>

    <div class="row">
        <div class="col-md-6">
            <p>
                <label>Select city</label>
                <select id="city" name="city">
                    <option value="">-- Choose City --</option>
                    <option value="1">Portland</option>
                    <option value="2">Salem</option>
                    <option value="3">Gresham</option>
                    <option value="4">Aloha</option>
                </select>
            </p>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

   {{/if}}
</form>
</div>
{{/partial}}

